<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Admin Dashboard </title>
    <link rel="stylesheet" href="../stylesheets/admin.css">
</head>
<body>    
    <form id="logoutForm" action="/doctor/logout" method="post">
          <button type="submit">Logout</button>
        </form>

    <h3> Welcome, <%= doctorsName %> </h3>

        <button id="openModalBtn">Add a Doctor</button>

    <h3> DOCTORS </h3>
    
        <div id="doctorRegistrationModal" class="modal">
        <div class="modal-content">
            <span class="close" id="closeModalBtn">&times;</span>
            <h3>Register a New Doctor</h3>
            <form class="signupForm" action="/admin/reg" method="post">
                <label for="doctorsName">Doctor's Name:</label>
                    <input type="text" id="doctorsName" name="doctorsName" required />

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required />

                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required />

                    <label for="gender"> Gender: </label>
                    <select name="gender" id="gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    </select>

                    <label for="specialization">Specialization:</label>
                    <select name="specialization" id="specialization">
                    <option value="Allergists">Allergists/Immunologists</option>
                    <option value="Cardiologists">Cardiologists</option>
                    <option value="Dermatologists">Dermatologists</option>
                    <option value="Neurologists">Neurologists</option>
                    <option value="Dermatologists">Dermatologists</option>
                    <option value="Surgeons">Surgeons</option>
                    
                    
                    </select>


                    <label for="phonenumber">Phone Number:</label>
                    <input type="number" id="phonenumber" name="phonenumber" required />

                    <button type="submit"> Create New Doctor </button>
            </form>
        </div>
        </div>

        <div id="errorModal" class="modal">
            <p id="errorMessage"></p>
        </div>
        <div id="doctorList" class="flex-container">

    </div>

    <div id="editModal" class="modal">
        <div class="modal-content">
            <span id="closeEditModalBtn" class="close">&times;</span>
            <h2>Edit Doctor</h2>
            <form id="editForm">
                <!-- Edit Doctor Form Elements -->
                <label for="editDoctorsName">Doctor's Name:</label>
                <input type="text" id="editDoctorsName" name="editDoctorsName" required />
                <label for="editPhoneNumber"> Phone Number:</label>
                <input type="tel" id="editPhoneNumber" name="editPhoneNumber" required />
                <label for="editEmail">Email:</label>
                <input type="email" id="editEmail" name="editEmail" required />
                <label for="editSpecialization">Specialization:</label>
                <input type="text" id="editSpecialization" name="editSpecialization" required />


                <!-- Add other fields here -->

                <button type="button" id="saveEditBtn">Save</button>
            </form>
        </div>
    </div>

    <!-- Delete Doctor Modal --> 
    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <span id="closeDeleteModalBtn" class="close">&times;</span>
            <h2>Delete Doctor</h2>
            <p>Are you sure you want to delete this doctor?</p>
            <button type="button" id="confirmDeleteBtn">Delete</button>
        </div>
    </div>

    

    <h3> REPORTS </h3>

    <div id="reportList" class="flex-container">

    </div>

    <div id="editReportModal" class="modal">
        <div class="modal-content">
            <span id="closeEditReportModalBtn" class="close">&times;</span>
            <h2>Edit Report</h2>
            <form id="editForm">
                <!-- Edit Doctor Form Elements -->
        <label for="editPatientsName">Patient's Name:</label>
        <input type="text" id="editPatientsName" name="editPatientsName" required />

        <label for="editAge">Age:</label>
        <input type="number" id="editAge" name="editAge" required />

        <label for="editHospitalName">Hospital Name:</label>
        <input type="text" id="editHospitalName" name="editHospitalName" required />

        <label for="editWeight">Weight:</label>
        <input type="text" id="editWeight" name="editWeight" required />

        <label for="editHeight">Height:</label>
        <input type="text" id="editHeight" name="editHeight" required />

        <label for="editBloodGroup">Blood Group:</label>
        <select name="editBloodGroup" id="editBloodGroup">
        <option value="A positive (A+)">A positive (A+)</option>
        <option value="A negative (A-)">A negative (A-)</option>
        <option value="B positive (B+)">B positive (B+)</option>
        <option value="B negative (B-)">B negative (B-)</option>
        <option value="AB positive (AB+)">AB positive (AB+)</option>
        <option value="AB negative (AB-)">A negative (AB-)</option>
        <option value="O positive (O+)">O postive (O+)</option>
        <option value="O nagative (O-)">O negative (O-)</option>
        </select>

        <label for="editGenotype">Genotype:</label>
        <select name="editGenotype" id="editGenotype">
        <option value="AA">AA</option>
        <option value="AS">AS</option>
        <option value="SS">SS</option>
        <option value="SC">SC</option>
        <option value="AC">AC</option>
        </select>

        <label for="editBloodPressure">Blood Pressure:</label>
        <input type="text" id="editBloodPressure" name="editBloodPressure" required />
        
        <label for="editHIV_status">HIV Status:</label>
        <select name="editHIV_status" id="editHIV_status">
        <option value="Negative"> Negative (-) </option>
        <option value="Postive"> Postive (+) </option>
        </select>

        <label for="editHepatitis">Hepatitis:</label>
        <select name="editHepatitis" id="editHepatitis">
        <option value="A positive (A+)">A positive (A+)</option>
        <option value="A negative (A-)">A negative (A-)</option>
        <option value="B positive (B+)">B positive (B+)</option>
        <option value="B negative (B+)">B negative (B+)</option>
        <option value="C positive (C+)">C positive (C+)</option>
        <option value="C negative (C-)">C negative (C-)</option>
        </select>
                <!-- Add other fields here -->
                <button type="button"  id="saveEditReportBtn" >Save</button>
            </form>
        </div>

    </div>

    <!-- Delete Report Modal -->
    <div id="deleteReportModal" class="modal">
        <div class="modal-content">
            <span id="closeDeleteReportModalBtn" class="close">&times;</span>
            <h2>Delete Report</h2>
            <p>Are you sure you want to delete this report?</p>
            <button type="button" id="confirmDeleteReportBtn">Delete</button>
        </div>

    </div>




    <script src="../script/admin.js"></script>
    <script src="../script/reports.js"></script>
</body>
</html>